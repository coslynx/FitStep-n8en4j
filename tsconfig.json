{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "@config/*": ["./config/*"],
      "@middleware/*": ["./middleware/*"]
    }
  },
  "include": [
    "next.config.js",
    "pages/**/*",
    "components/**/*",
    "styles/**/*",
    "utils/**/*",
    "config/**/*",
    "middleware/**/*",
    "prisma/**/*"
  ],
  "exclude": ["node_modules"]
}